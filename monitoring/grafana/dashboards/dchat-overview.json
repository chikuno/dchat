{
  "dashboard": {
    "title": "dchat Testnet Overview",
    "panels": [
      {
        "title": "Relay Nodes Status",
        "targets": [
          {
            "expr": "up{job=~'relay.*'}"
          }
        ]
      },
      {
        "title": "Messages Sent (Total)",
        "targets": [
          {
            "expr": "increase(dchat_messages_sent_total[5m])"
          }
        ]
      },
      {
        "title": "Messages Received (Total)",
        "targets": [
          {
            "expr": "increase(dchat_messages_received_total[5m])"
          }
        ]
      },
      {
        "title": "Connected Peers",
        "targets": [
          {
            "expr": "dchat_peers_connected"
          }
        ]
      }
    ]
  }
}
