{
  "networks": {
    "dchat-testnet": {
      "driver": "bridge"
    }
  },
  "services": {
    "client0": {
      "command": [
        "user",
        "--bootstrap",
        [
          "/ip4/127.0.0.1/tcp/7070",
          "/ip4/127.0.0.1/tcp/7072"
        ],
        "--username",
        "testuser0",
        "--non-interactive"
      ],
      "image": "dchat:latest",
      "networks": [
        "dchat-testnet"
      ],
      "restart": "unless-stopped"
    },
    "client1": {
      "command": [
        "user",
        "--bootstrap",
        [
          "/ip4/127.0.0.1/tcp/7070",
          "/ip4/127.0.0.1/tcp/7072"
        ],
        "--username",
        "testuser1",
        "--non-interactive"
      ],
      "image": "dchat:latest",
      "networks": [
        "dchat-testnet"
      ],
      "restart": "unless-stopped"
    },
    "client2": {
      "command": [
        "user",
        "--bootstrap",
        [
          "/ip4/127.0.0.1/tcp/7070",
          "/ip4/127.0.0.1/tcp/7072"
        ],
        "--username",
        "testuser2",
        "--non-interactive"
      ],
      "image": "dchat:latest",
      "networks": [
        "dchat-testnet"
      ],
      "restart": "unless-stopped"
    },
    "relay0": {
      "command": [
        "relay",
        "--listen",
        "0.0.0.0:7070",
        "--bootstrap",
        [
          "/ip4/127.0.0.1/tcp/7070",
          "/ip4/127.0.0.1/tcp/7072"
        ],
        "--stake",
        "1000"
      ],
      "image": "dchat:latest",
      "networks": [
        "dchat-testnet"
      ],
      "ports": [
        "7070:7070"
      ],
      "restart": "unless-stopped"
    },
    "relay1": {
      "command": [
        "relay",
        "--listen",
        "0.0.0.0:7072",
        "--bootstrap",
        [
          "/ip4/127.0.0.1/tcp/7070",
          "/ip4/127.0.0.1/tcp/7072"
        ],
        "--stake",
        "1000"
      ],
      "image": "dchat:latest",
      "networks": [
        "dchat-testnet"
      ],
      "ports": [
        "7072:7072"
      ],
      "restart": "unless-stopped"
    },
    "validator0": {
      "command": [
        "validator",
        "--key",
        "/data/validator_0.key",
        "--chain-rpc",
        "http://chain-rpc:26657",
        "--stake",
        "10000",
        "--producer"
      ],
      "image": "dchat:latest",
      "networks": [
        "dchat-testnet"
      ],
      "restart": "unless-stopped",
      "volumes": [
        "./test-launch\\validators:/data"
      ]
    },
    "validator1": {
      "command": [
        "validator",
        "--key",
        "/data/validator_1.key",
        "--chain-rpc",
        "http://chain-rpc:26657",
        "--stake",
        "10000",
        "--producer"
      ],
      "image": "dchat:latest",
      "networks": [
        "dchat-testnet"
      ],
      "restart": "unless-stopped",
      "volumes": [
        "./test-launch\\validators:/data"
      ]
    }
  },
  "version": "3.8"
}